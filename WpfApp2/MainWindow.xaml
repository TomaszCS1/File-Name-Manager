<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
   WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
                Title="FILE UMBENENNEN" Height="748" Width="1352" Foreground="{x:Null}">
    <Border CornerRadius="20"
            Background="#FFEFECEC"
            BorderBrush="#FF8FB1"
            BorderThickness="5">


        <Grid Margin="10,10,10,5" Visibility="Visible" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>

            <TextBox Name="tb1" HorizontalAlignment="Left" Margin="147,521,0,62" Text="TextBox" Width="160" Visibility="Hidden" />
            <Button Margin="1275,14,17,664" />
            <Canvas HorizontalAlignment="Left" Height="530" Margin="516,22,0,0" VerticalAlignment="Top" Width="796" Background="White"/>


            <ListBox x:Name="lbFilesInDirectory" HorizontalAlignment="Left" Height="447" Margin="530,57,0,0" VerticalAlignment="Top" Width="375" >
                <ListBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFBF9F9"/>
                        <GradientStop Color="#FFEBDFDF" Offset="0.857"/>
                        <GradientStop Color="#FFEEE3E3" Offset="1"/>
                    </LinearGradientBrush>
                </ListBox.Background>
            </ListBox>

            <ListBox HorizontalAlignment="Left" Height="445" Margin="935,58,0,0" Name="lbFilesNewNames"  VerticalAlignment="Top" Width="365" SelectionChanged="ListBox_SelectionChanged_1" IsManipulationEnabled="True" >
                <ListBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFD9E0E8"/>
                        <GradientStop Color="#FFD4DCE4" Offset="1"/>
                        <GradientStop Color="#FFFCFCFC" Offset="0"/>
                    </LinearGradientBrush>
                </ListBox.Background>
            </ListBox>

            <Canvas x:Name="dNameKurzen" Background="White"  HorizontalAlignment="Left" Height="236" Margin="20,23,0,0" VerticalAlignment="Top" Width="480" IsHitTestVisible="False">
                <Label Content=" Deteinamen kurzen" Canvas.Left="35" Canvas.Top="30" FontWeight="Bold"></Label>
                <Label Content="Anzahl Buchstaben (die am Anfang/Ende zum beibehalten)" Height="33" Canvas.Left="30" Canvas.Top="55" Width="326" ForceCursor="True" RenderTransformOrigin="0.349,0.289"/>
                <TextBox x:Name="tbAnzBuchst" Height="18"  TextWrapping="Wrap" Width="60" TextChanged="TextBox_TextChanged_1" Canvas.Left="37" Canvas.Top="88" />
                <Label Content="Dateityp"  Canvas.Left="43" Canvas.Top="142" Height="24" Width="58"/>
                <Label Content="Dateiname" Canvas.Left="217" Canvas.Top="142"/>
                <RadioButton x:Name="rbAmAnfang"   GroupName="Group1" Content="Am Anfang" Height="18"  Width="100" IsChecked="True" Checked="RadioButton_Checked_1" Canvas.Left="120" Canvas.Top="88"/>
                <RadioButton x:Name="rbAmEnde"    GroupName="Group1" Content="Am Ende" Height="18" Width="100" Checked="RadioButton_Checked" Canvas.Left="236" Canvas.Top="88" />
                <TextBox Height="19" Margin="108,170,0,0" TextWrapping="Wrap" Text="TextBox" Width="60" Canvas.Left="12" Canvas.Top="-23"/>
                <TextBox Height="18" Margin="275,170,0,0" TextWrapping="Wrap" Text="TextBox" Width="170" Canvas.Left="23" Canvas.Top="-23"/>

            </Canvas>

            <Canvas x:Name="textAendern" Margin="20,287,822,211" Cursor="Arrow" Background="White" >

                <Label Content="Textteile ändern" Canvas.Left="35" Canvas.Top="30" FontWeight="Bold"></Label>
                <Label Content="alter Text 1" Canvas.Left="46" Canvas.Top="60"></Label>
                <Label Content="neuer Text 1" Canvas.Left="231" Canvas.Top="60"></Label>
                <TextBox x:Name="tbAltText1"  Height="18" Width="150" Canvas.Left="46" Canvas.Top="91" TextChanged="tbAltText1_TextChanged"></TextBox>
                <TextBox x:Name="tbNeuText1"  Height="18" Width="150" Canvas.Left="231" Canvas.Top="91"  ></TextBox>
                <Label Content="alter Text 2" Canvas.Left="46" Canvas.Top="133"/>
                <Label Content="neuer Text 2" Canvas.Left="231" Canvas.Top="133"/>
                <TextBox x:Name="tbAltText2" Height="18" Width="150" Canvas.Left="46" Canvas.Top="164"/>
                <TextBox x:Name="tbNeuText2" Height="18" Width="150" Canvas.Left="231" Canvas.Top="164"  />

            </Canvas>


            <Label Content="Vorschau Änderungen" HorizontalAlignment="Left" Margin="935,22,0,0" VerticalAlignment="Top" Width="180" FontWeight="Normal" Height="26"/>
            <Label Content="Vorschau alte Benennungen" HorizontalAlignment="Left" Margin="530,22,0,0" VerticalAlignment="Top" Width="185" FontWeight="Normal" Height="30"/>
            <Button Content="Änderungen speichern" Height="45" Margin="335,560,830,0" VerticalAlignment="Top" Background="#FFFCE2DB" />
            <Button Content="Fertig" Click="btnClose" Margin="335,632,830,32" FontWeight="Bold" Background="#FFFCE2DB"  />
            <Button Content="Änderungen Vorschau"  Height="45" Margin="335,507,830,0" VerticalAlignment="Top" Click="aenderVorschau" Background="#FFFCE2DB"/>
            <Canvas HorizontalAlignment="Left" Height="3" Margin="530,22,0,0" VerticalAlignment="Top" Width="0"/>
            <Button  Content="Directory open" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Height="30" Width="158" Click="btnOpenDiretory" Background="#FFFCE2DB"/>

        </Grid>
    </Border>
</Window>
